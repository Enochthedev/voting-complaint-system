# Required Variables
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Server-Only Variables (Optional - NOT USED in current frontend-only deployment)
# ⚠️ WARNING: NEVER expose this to the client! Only use in server-side API routes.
# Leave empty for frontend-only deployments (like Vercel static hosting)
SUPABASE_SERVICE_ROLE_KEY=

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3001

# File Upload Settings
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_MAX_FILES_PER_COMPLAINT=5

# Feature Flags
NEXT_PUBLIC_ENABLE_ANONYMOUS_COMPLAINTS=true
NEXT_PUBLIC_ENABLE_VOTING=true
NEXT_PUBLIC_ENABLE_ANNOUNCEMENTS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_NOTIFICATIONS=true

# Pagination Settings
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# Session & Security
SESSION_TIMEOUT=3600
RATE_LIMIT_COMPLAINTS_PER_HOUR=10

# Analytics & Debug
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_DEBUG_MODE=false
